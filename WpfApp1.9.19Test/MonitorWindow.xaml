<Window x:Class="WpfApp1._9._19Test.MonitorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1._9._19Test"
        mc:Ignorable="d"
        Title="MonitorWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Width" HorizontalAlignment="Left" Margin="86,46,0,0" VerticalAlignment="Top" Height="28" Width="60"/>
        <TextBlock Text="Height" HorizontalAlignment="Left" Margin="86,95,0,0" VerticalAlignment="Top" Height="28" Width="60"/>
        <TextBlock Text="Text" HorizontalAlignment="Left" Margin="86,157,0,0" VerticalAlignment="Top" Height="28" Width="60"/>

        <TextBlock HorizontalAlignment="Left" Margin="223,36,0,0" TextWrapping="Wrap" Text="{Binding WidthBTN ,Mode=TwoWay}" VerticalAlignment="Top" Height="28" Width="114"/>
        <TextBlock HorizontalAlignment="Left" Margin="223,85,0,0" TextWrapping="Wrap" Text="{Binding HeightBTN ,Mode=TwoWay}" VerticalAlignment="Top" Height="28" Width="114"/>
        <TextBlock HorizontalAlignment="Left" Margin="223,147,0,0" TextWrapping="Wrap" Text="{Binding TextBTN ,Mode=TwoWay}" VerticalAlignment="Top" Height="28" Width="114"/>
    </Grid>
</Window>
